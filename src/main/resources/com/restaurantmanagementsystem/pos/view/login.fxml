<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>

<AnchorPane prefHeight="500.0" prefWidth="400.0" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" fx:controller="com.restaurantmanagementsystem.pos.controller.LoginController" style="-fx-background-color: white;">
    <VBox alignment="CENTER" spacing="20" layoutX="100.0" layoutY="50.0" AnchorPane.bottomAnchor="50.0" AnchorPane.leftAnchor="50.0" AnchorPane.rightAnchor="50.0" AnchorPane.topAnchor="50.0">
        <ImageView fitWidth="150" preserveRatio="true">
            <image>
                <Image url="@/logo.png" />
            </image>
        </ImageView>
        <Text text="Login Account" style="-fx-font-size: 24; -fx-font-weight: bold;" />
        <TextField fx:id="usernameField" promptText="Username" maxWidth="200.0"/>
        <PasswordField fx:id="passwordField" promptText="Password" maxWidth="200.0"/>
        <Button text="Login" onAction="#handleLoginButtonAction" style="-fx-background-color: green; -fx-text-fill: white;" maxWidth="200.0"/>
        <Hyperlink fx:id="createAccountLink" text="Create Account" onAction="#handleSwitchToRegister" />
        <Text fx:id="loginMessageLabel"/>
    </VBox>
</AnchorPane>
