<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.restaurantmanagementsystem.pos.controller.InventoryController" prefHeight="600.0" prefWidth="910.0">
    <center>
        <SplitPane dividerPositions="0.75">
            <VBox>
                <TableView fx:id="productTable" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="productIdColumn" style="-fx-alignment: CENTER;" text="Product ID" />
                        <TableColumn fx:id="productNameColumn" style="-fx-alignment: CENTER;" text="Name" />
                        <TableColumn fx:id="priceColumn" style="-fx-alignment: CENTER;" text="Price" />
                        <TableColumn fx:id="categoryColumn" style="-fx-alignment: CENTER;" text="Category" />
                        <TableColumn fx:id="stockColumn" style="-fx-alignment: CENTER;" text="Stock" />
                        <TableColumn fx:id="statusColumn" style="-fx-alignment: CENTER;" text="Status" />
                        <TableColumn fx:id="imageColumn" style="-fx-alignment: CENTER;" text="Image" />
                        <TableColumn fx:id="deleteColumn" style="-fx-alignment: CENTER;" text="Action" />
                    </columns>
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                    </columnResizePolicy>
                    <padding>
                        <Insets top="5" right="5" bottom="5" left="5"/>
                    </padding>
                </TableView>
            </VBox>

            <SplitPane dividerPositions="0.5" orientation="VERTICAL">
                <VBox spacing="10">
                    <VBox alignment="TOP_CENTER" spacing="10">
                        <HBox alignment="CENTER" spacing="10">
                            <Label text="ADD/UPDATE PRODUCT" style="-fx-font-size: 17px; -fx-font-weight: bold;" />
                            <padding>
                                <Insets left="5" top="15"/>
                            </padding>
                        </HBox>
                        <HBox alignment="CENTER_LEFT" spacing="10">
                            <Label minWidth="80" text="Name:" />
                            <TextField fx:id="productNameField" prefWidth="120" />
                            <padding>
                                <Insets left="5"/>
                            </padding>
                        </HBox>
                        <HBox alignment="CENTER_LEFT" spacing="10">
                            <Label minWidth="80" text="Stock:" />
                            <TextField fx:id="stockField" prefWidth="120" />
                            <padding>
                                <Insets left="5" />
                            </padding>
                        </HBox>
                        <HBox alignment="CENTER_LEFT" spacing="10">
                            <Label minWidth="80" text="Price (RM):" />
                            <TextField fx:id="priceField" prefWidth="120" />
                            <padding>
                                <Insets left="5" />
                            </padding>
                        </HBox>
                        <HBox alignment="CENTER_LEFT" spacing="10">
                            <Label minWidth="80" text="Type:" />
                            <ComboBox fx:id="typeComboBox" prefWidth="120">
                                <!-- Options added in controller -->
                            </ComboBox>
                            <padding>
                                <Insets left="5" />
                            </padding>
                        </HBox>
                        <HBox alignment="CENTER_LEFT" spacing="10">
                            <Label minWidth="80" text="Status:" />
                            <ComboBox fx:id="statusComboBox" prefWidth="120">
                                <!-- Options added in controller -->
                            </ComboBox>
                            <padding>
                                <Insets left="5" />
                            </padding>
                        </HBox>
                    </VBox>
                    <HBox spacing="15">
                        <Button onAction="#handleAddAction" minWidth="60" text="Add" />
                        <Button onAction="#handleUpdateAction" minWidth="60" text="Update" />
                        <Button onAction="#handleClearAction" minWidth="60" text="Clear" />
                        <padding>
                            <Insets left="5" top="5" />
                        </padding>
                    </HBox>
                </VBox>

                <VBox alignment="CENTER_LEFT" spacing="10">
                    <StackPane style="-fx-border-color: black; -fx-border-width: 2; -fx-padding: 5;">
                        <ImageView fx:id="productImageView" fitHeight="200" fitWidth="150" preserveRatio="true"/>
                    </StackPane>
                    <Button minWidth="80" onAction="#handleImportAction" text="Import Image"/>
                    <padding>
                        <Insets left="5" top="5" right="5"/>
                    </padding>
                </VBox>
            </SplitPane>
        </SplitPane>
    </center>
</BorderPane>