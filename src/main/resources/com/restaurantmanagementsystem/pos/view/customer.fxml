<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.control.cell.PropertyValueFactory?>

<AnchorPane xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.restaurantmanagementsystem.pos.controller.CustomerController">
    <BorderPane fx:id="mainBorderPane" prefHeight="600.0" prefWidth="1100.0">
        <left>
            <VBox alignment="TOP_CENTER" prefHeight="574.0" prefWidth="109.0" spacing="10" style="-fx-background-color: #000000; -fx-padding: 10;" BorderPane.alignment="CENTER">
                <ImageView fitHeight="100" fitWidth="100" pickOnBounds="true" preserveRatio="true">
                    <Image url="@/logo.png"/>
                </ImageView>
                <Text fill="WHITE" style="-fx-font-size: 20;-fx-background-color: transparent; -fx-text-fill: white;" text="Big Bite Restaurant" />
                <Text fx:id="welcomeText" fill="WHITE" style="-fx-background-color: transparent; -fx-text-fill: white;" text="Welcome, Customer" />
                <Button fx:id="appetizersButton" text="Appetizers" minWidth="150" onAction="#handleCategoryAction" style="-fx-background-color: transparent; -fx-text-fill: white;" />
                <Button fx:id="entreesButton" text="EntrÃ©es" minWidth="150" onAction="#handleCategoryAction" style="-fx-background-color: transparent; -fx-text-fill: white;" />
                <Button fx:id="sidesButton" text="Sides" minWidth="150" onAction="#handleCategoryAction" style="-fx-background-color: transparent; -fx-text-fill: white;" />
                <Button fx:id="dessertsButton" text="Desserts" minWidth="150" onAction="#handleCategoryAction" style="-fx-background-color: transparent; -fx-text-fill: white;" />
                <Button fx:id="beveragesButton" text="Beverages" minWidth="150" onAction="#handleCategoryAction" style="-fx-background-color: transparent; -fx-text-fill: white;" />
                <Button fx:id="signOutButton" text="Sign Out" minWidth="150" onAction="#handleSignOutAction" style="-fx-background-color: transparent; -fx-text-fill: white;" />
            </VBox>
        </left>
        <center>
            <VBox fx:id="centerVBox" BorderPane.alignment="CENTER" spacing="20" style="-fx-padding: 20;">
                <HBox alignment="CENTER" spacing="15">
                    <!-- Menu item VBoxes go here -->
                </HBox>
            </VBox>
        </center>
        <right>
            <VBox alignment="TOP_CENTER" spacing="10" style="-fx-padding: 20;" BorderPane.alignment="CENTER">
                <Text style="-fx-font-weight: bold;" text="Order Details" />
                <TableView fx:id="orderDetailsTable" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="productNameColumn" text="Item">
                            <cellValueFactory>
                                <PropertyValueFactory property="productName"/>
                            </cellValueFactory>
                        </TableColumn>
                        <TableColumn fx:id="quantityColumn" text="Quantity">
                            <cellValueFactory>
                                <PropertyValueFactory property="quantity"/>
                            </cellValueFactory>
                        </TableColumn>
                        <TableColumn fx:id="priceColumn" text="Price (RM)">
                            <cellValueFactory>
                                <PropertyValueFactory property="price"/>
                            </cellValueFactory>
                        </TableColumn>
                    </columns>
                </TableView>
                <HBox spacing="10">
                    <Text fx:id="totalText" text="Total: RM0.0" />
                </HBox>
                <HBox VBox.vgrow="NEVER">
                    <Button fx:id="clearOrderButton" text="Clear Order" onAction="#handleClearOrderAction" HBox.hgrow="ALWAYS" maxWidth="Infinity" />
                </HBox>
                <HBox VBox.vgrow="NEVER">
                    <Button fx:id="confirmOrderButton" text="Confirm Order" onAction="#handleConfirmOrderAction" HBox.hgrow="ALWAYS" maxWidth="Infinity" />
                </HBox>
                <HBox VBox.vgrow="NEVER">
                    <Button fx:id="receiptButton" text="Receipt" onAction="#handleReceiptAction" HBox.hgrow="ALWAYS" maxWidth="Infinity"/>
                </HBox>
            </VBox>
        </right>
    </BorderPane>
</AnchorPane>
