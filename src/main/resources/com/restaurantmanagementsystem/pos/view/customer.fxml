<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<?import javafx.scene.control.cell.PropertyValueFactory?>
<AnchorPane xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.restaurantmanagementsystem.pos.controller.CustomerController">
    <BorderPane prefHeight="600.0" prefWidth="1000.0">
        <top>
            <MenuBar BorderPane.alignment="CENTER">
                <menus>
                    <Menu text="File">
                        <items>
                            <MenuItem text="Sign Out" />
                        </items>
                    </Menu>
                </menus>
            </MenuBar>
        </top>
        <left>
            <VBox alignment="TOP_CENTER" prefHeight="574.0" prefWidth="109.0" spacing="10" style="-fx-background-color: #000000; -fx-padding: 10;" BorderPane.alignment="CENTER">
                <ImageView fitHeight="100" fitWidth="100" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@/logo.png" />
                    </image>
                </ImageView>
                <Text fill="WHITE" style="-fx-font-size: 20;-fx-background-color: transparent; -fx-text-fill: white;" text="Big Bite Restaurant" />
                <Text fx:id="welcomeText" fill="WHITE" style="-fx-background-color: transparent; -fx-text-fill: white;" text="Welcome, Customer" />
                <Button contentDisplay="CENTER" minWidth="150" style="-fx-background-color: transparent; -fx-text-fill: white;" text="Appetizers" />
                <Button minWidth="150" style="-fx-background-color: transparent; -fx-text-fill: white;" text="EntrÃ©es" />
                <Button minWidth="150" style="-fx-background-color: transparent; -fx-text-fill: white;" text="Sides" />
                <Button minWidth="150" style="-fx-background-color: transparent; -fx-text-fill: white;" text="Desserts" />
                <Button minWidth="150" style="-fx-background-color: transparent; -fx-text-fill: white;" text="Beverages" />
                <Button fx:id="signOutButton" minWidth="150" onAction="#handleSignOutAction" style="-fx-background-color: transparent; -fx-text-fill: white;" text="Sign Out" />
            </VBox>
        </left>
        <center>
            <VBox fx:id="centerVBox" BorderPane.alignment="CENTER" spacing="20" style="-fx-padding: 20;">
                <HBox alignment="CENTER" spacing="15">
                    <!-- Individual item VBoxes go here -->
                </HBox>
            </VBox>
        </center>
        <right>
            <VBox alignment="TOP_CENTER" spacing="10" style="-fx-padding: 20;" BorderPane.alignment="CENTER">
                <Text style="-fx-font-weight: bold;" text="Order Details" />
                <TableView fx:id="orderDetailsTable">
                    <columns>
                        <TableColumn fx:id="productNameColumn" text="Product Name">
                            <cellValueFactory>
                                <PropertyValueFactory property="productName"/>
                            </cellValueFactory>
                        </TableColumn>
                        <TableColumn fx:id="quantityColumn" text="Quantity">
                            <cellValueFactory>
                                <PropertyValueFactory property="quantity"/>
                            </cellValueFactory>
                        </TableColumn>
                        <TableColumn fx:id="priceColumn" text="Price ($)">
                            <cellValueFactory>
                                <PropertyValueFactory property="price"/>
                            </cellValueFactory>
                        </TableColumn>
                    </columns>
                </TableView>
                <HBox spacing="10">
                    <Text fx:id="totalText" text="Total: $0.0" />
                </HBox>
                <Button text="Pay" />
                <Button fx:id="removeButton" text="Remove" onAction="#handleRemoveItemAction" />
                <Button text="Receipt" />
            </VBox>
        </right>
    </BorderPane>
</AnchorPane>
