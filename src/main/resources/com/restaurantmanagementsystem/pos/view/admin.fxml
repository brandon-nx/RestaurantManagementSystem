<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.restaurantmanagementsystem.pos.controller.AdminController">
    <BorderPane prefHeight="600.0" prefWidth="1100.0">
        <left>
            <VBox alignment="TOP_CENTER" prefHeight="574.0" prefWidth="109.0" spacing="10" style="-fx-background-color: #000000; -fx-padding: 10;" BorderPane.alignment="CENTER">
                <ImageView fitHeight="100" fitWidth="100" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@/logo.png" />
                    </image>
                </ImageView>
                <Text fill="WHITE" style="-fx-font-size: 20;-fx-background-color: transparent; -fx-text-fill: white;" text="Big Bite Restaurant" />
                <Text fx:id="welcomeText" fill="WHITE" style="-fx-background-color: transparent; -fx-text-fill: white;" text="Welcome, Admin111" />
                <Button contentDisplay="CENTER" minWidth="150" style="-fx-background-color: transparent; -fx-text-fill: white;" text="Dashboard" />
                <Button minWidth="150" style="-fx-background-color: transparent; -fx-text-fill: white;" text="Inventory" />
                <Button minWidth="150" style="-fx-background-color: transparent; -fx-text-fill: white;" text="Menu" />
                <Button minWidth="150" style="-fx-background-color: transparent; -fx-text-fill: white;" text="Customers" />
                <Button fx:id="signOutButton" minWidth="150" onAction="#handleSignOutAction" style="-fx-background-color: transparent; -fx-text-fill: white;" text="Sign Out" />
            </VBox>
        </left>
        <center>
            <SplitPane dividerPositions="0.67">
                <VBox>
                    <TableView fx:id="productTable" VBox.vgrow="ALWAYS">
                        <columns>
                            <TableColumn fx:id="productIdColumn" style="-fx-alignment: CENTER;" text="Product ID" />
                            <TableColumn fx:id="productNameColumn" style="-fx-alignment: CENTER;" text="Name" />
                            <TableColumn fx:id="priceColumn" style="-fx-alignment: CENTER;" text="Price" />
                            <TableColumn fx:id="categoryColumn" style="-fx-alignment: CENTER;" text="Category" />
                            <TableColumn fx:id="stockColumn" style="-fx-alignment: CENTER;" text="Stock" />
                            <TableColumn fx:id="statusColumn" style="-fx-alignment: CENTER;" text="Status" />
                            <TableColumn fx:id="imageColumn" style="-fx-alignment: CENTER;" text="Image" />
                        </columns>
                        <columnResizePolicy>
                            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                        </columnResizePolicy>
                    </TableView>
                </VBox>

            <SplitPane dividerPositions="0.5" orientation="VERTICAL">
                <VBox spacing="10">
                    <VBox alignment="TOP_CENTER" spacing="10">
                        <HBox alignment="CENTER_LEFT" spacing="10">
                            <Label minWidth="80" text="Product ID:" />
                            <TextField fx:id="productIdField" prefWidth="200" />
                            <padding>
                                <Insets left="5" top="25" />
                            </padding>
                        </HBox>
                        <HBox alignment="CENTER_LEFT" spacing="10">
                            <Label minWidth="80" text="Name:" />
                            <TextField fx:id="productNameField" prefWidth="200" />
                            <padding>
                                <Insets left="5" />
                            </padding>
                        </HBox>
                        <HBox alignment="CENTER_LEFT" spacing="10">
                            <Label minWidth="80" text="Stock:" />
                            <TextField fx:id="stockField" prefWidth="90" />
                            <padding>
                                <Insets left="5" />
                            </padding>
                        </HBox>
                        <HBox alignment="CENTER_LEFT" spacing="10">
                            <Label minWidth="80" text="Price (RM):" />
                            <TextField fx:id="priceField" prefWidth="90" />
                            <padding>
                                <Insets left="5" />
                            </padding>
                        </HBox>
                        <HBox alignment="CENTER_LEFT" spacing="10">
                            <Label minWidth="80" text="Type:" />
                            <ComboBox fx:id="typeComboBox" prefWidth="90">
                                <!-- Options added in controller -->
                            </ComboBox>
                            <padding>
                                <Insets left="5" />
                            </padding>
                        </HBox>
                        <HBox alignment="CENTER_LEFT" spacing="10">
                            <Label minWidth="80" text="Status:" />
                            <ComboBox fx:id="statusComboBox" prefWidth="90">
                                <!-- Options added in controller -->
                            </ComboBox>
                            <padding>
                                <Insets left="5" />
                            </padding>
                        </HBox>
                    </VBox>
                    <HBox spacing="10">
                        <Button fx:id="addButton" onAction="#handleAddAction" minWidth="60" text="Add" />
                        <Button fx:id="updateButton" onAction="#handleUpdateAction" minWidth="60" text="Update" />
                        <Button fx:id="clearButton" onAction="#handleClearAction" minWidth="60" text="Clear" />
                        <Button fx:id="deleteButton" onAction="#handleDeleteAction" minWidth="60" text="Delete" />
                        <padding>
                            <Insets left="5" top="5" />
                        </padding>
                    </HBox>
                </VBox>

                <VBox alignment="CENTER_LEFT" spacing="10">
                    <StackPane style="-fx-border-color: black; -fx-border-width: 2; -fx-padding: 5;">
                        <ImageView fx:id="productImageView" fitHeight="200" fitWidth="150" preserveRatio="true"/>
                    </StackPane>
                    <Button fx:id="importButton" minWidth="80" onAction="#handleImportAction" text="Import Image"/>
                    <padding>
                        <Insets left="5" top="5"/>
                    </padding>
                </VBox>
            </SplitPane>
            </SplitPane>
        </center>
    </BorderPane>
</AnchorPane>
