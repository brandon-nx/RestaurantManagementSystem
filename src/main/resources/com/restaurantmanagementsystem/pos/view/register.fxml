<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="500.0" prefWidth="400.0" style="-fx-background-color: #fa8e4b;" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.restaurantmanagementsystem.pos.controller.RegisterController">
    <VBox alignment="CENTER" spacing="15" AnchorPane.bottomAnchor="50.0" AnchorPane.leftAnchor="50.0" AnchorPane.rightAnchor="50.0" AnchorPane.topAnchor="50.0">
        <ImageView fitHeight="150" fitWidth="150" pickOnBounds="true" preserveRatio="true">
            <image>
                <Image url="@/logo.png" />
            </image>
        </ImageView>
        <Text style="-fx-font-size: 24; -fx-font-weight: bold;" text="Register Account" />
        <TextField fx:id="usernameField" maxWidth="250.0" promptText="Username" />
        <PasswordField fx:id="passwordField" maxWidth="250.0" promptText="Password" />
        <PasswordField fx:id="confirmPasswordField" maxWidth="250.0" promptText="Confirm Password" />
        <TextField fx:id="contactField" maxWidth="250.0" promptText=" Contact Number" />
        <TextField fx:id="addressField" maxWidth="250.0" promptText="Address" />
        <Button maxWidth="250.0" onAction="#handleRegisterButtonAction" style="-fx-background-color: #5cb85c; -fx-text-fill: white;" text="Sign Up" />
        <HBox alignment="CENTER">
            <Text text="Already have an Account?" />
            <Hyperlink onAction="#handleSwitchToLogin" style="-fx-background-color: transparent; -fx-underline: true;" text="Log In" />
        </HBox>
    </VBox>
</AnchorPane>
